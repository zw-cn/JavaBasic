<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
<!--    配置servlet-->
    <servlet>
        <!--    配置servlet类路径-->
        <servlet-name>myServletName</servlet-name>
        <servlet-class>com.zw.servlet.MyServlet</servlet-class>
    </servlet>
    <!--    配置访问方式-->
    <servlet-mapping>
        <servlet-name>myServletName</servlet-name>
        <url-pattern>/myServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>myCookieCheck</servlet-name>
        <servlet-class>com.zw.servlet.cookie.CheckCookie</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>myCookieCheck</servlet-name>
        <url-pattern>/myCookieCheck</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>myLoginPage</servlet-name>
        <servlet-class>com.zw.servlet.cookie.LoginPage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>myLoginPage</servlet-name>
        <url-pattern>/myLoginPage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>myLogin</servlet-name>
        <servlet-class>com.zw.servlet.cookie.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>myLogin</servlet-name>
        <url-pattern>/myLogin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>myIndex</servlet-name>
        <servlet-class>com.zw.servlet.cookie.Index</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>myIndex</servlet-name>
        <url-pattern>/myIndex</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>myShow</servlet-name>
        <servlet-class>com.zw.servlet.cookie.Show</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>myShow</servlet-name>
        <url-pattern>/myShow</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>myCount</servlet-name>
        <servlet-class>com.zw.servlet.servletcontext.Count</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>myCount</servlet-name>
        <url-pattern>/myCount</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>myFilter</filter-name>
        <filter-class>com.zw.filter.MyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>myFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>